{
  "name": "react-ssr-esbuild",
  "version": "1.0.0",
  "description": "React SSR with esbuild",
  "type": "module",
  "main": "build/server.js",
  "scripts": {
    "build:client": "node build-client.js",
    "build:server": "node build-server.js",
    "build": "npm run build:client && npm run build:server",
    "start": "node build/server.js",
    "dev:build": "NODE_ENV=development npm run build",
    "prod:build": "NODE_ENV=production npm run build",
    "clean": "rm -rf build",
    "dev": "npm run dev:build && npm start",
    "prod": "npm run prod:build && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1"
  },
  "devDependencies": {
    "esbuild": "^0.19.12",
    "@types/express": "^4.17.21",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "react",
    "ssr",
    "esbuild",
    "server-side-rendering"
  ],
  "author": "Your Name",
  "license": "MIT"
}